<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppCompat_alert_dialog_style_with_title" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorPrimary">@color/secondary_text</item>
        <item name="android:background">@android:color/white</item>
    </style>

    <style name="AppCompat_alert_dialog_style_no_title" parent="AppCompat_alert_dialog_style_with_title">
        <item name="android:windowNoTitle">true</item>
    </style>


    <style name="NegativeButtonStyleOrange" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <style name="PositiveButtonStyleBlack" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="NegativeButtonStyleBlack" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="AppCompat_alert_dialog_custom_negative_button_style" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="buttonBarPositiveButtonStyle">@style/PositiveButtonStyleBlack</item>
        <item name="buttonBarNegativeButtonStyle">@style/NegativeButtonStyleOrange</item>
    </style>


    <style name="AppCompat_progress_dialog_style" parent="@android:style/Widget.ProgressBar">
        <item name="android:background">@color/white</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
    </style>

</resources>